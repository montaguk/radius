<Alloy>
	<!-- So far this is all android specific... -->
	<Tab title="Map" id="maptab">
    	<Window id="mapwin" >
        	<!-- Use the Alloy.Globals.Map namespace to create a map module view -->
        	<View id="mapview" ns="Alloy.Globals.Map" onClick="report" userLocation="true" />
        	<Button id="button" onClick="markButtonClick" title="Drop Message!"
            		top="90%" width="30%" center="50%" height="10%" />                
    	</Window>
    </Tab>
    
    <View id="annotationView" width="Ti.UI.FILL" height="Ti.UI.FILL">
    	<ImageView id="annotationView.imageView" width="Ti.UI.FILL" height="Ti.UI.FILL" />
    </View>
</Alloy>